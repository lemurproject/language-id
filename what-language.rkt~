#lang racket

; Module to discover the language being used on a webpage

(require srfi/1)
(require (planet vyzo/crypto))

(require "bloom-filter.rkt")

(define (hash e k bounds)
  (remainder
   (if (= 0 k)
       (sha1 (string->bytes/locale e))
       (bitwise-xor k (hash e (- k 1) bounds)))
   bounds))
